<!DOCTYPE html>
<html lang="en">
<head>
 <% include partials/head %> 
</head>
<body>
<% include partials/menu %>

<div class="container col-sm-12" id="choose-files" oncopy="return false" oncut="return false" onpaste="return false">
  <%if (message != '') { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%=message %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% } %>
  <%if (errMsgLimit != '') { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%=errMsgLimit %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
  </div>  

  <% } %>
  <div class="row d-flex justify-content-center mt-5" >
     <form action="/uploadfile" method="post" enctype="multipart/form-data" class="px-5 py-3 mx-md-0 mx-3">
      <div class="text-center">
           <input type="file" accept=".csv" required="true" class="form-control ml-2" name="files" id="cashbackfiles"/></div>
           <%if (errMsg != '') { %>
             <!--div class="error ml-4">Upload csv file only.</div-->
           <% } %>
           <div class="text-center mt-3">
           <input class="btn" type="submit" style="border-radius: 4px;" name="cashbackfiles" value="Upload">
          </div>
       </form>
  </div>
</div>

</body>
<% include partials/script %>
</html>